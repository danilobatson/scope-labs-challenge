generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Showtime {
  id          Int      @id @default(autoincrement())
  theaterName String
  movieTitle  String
  auditorium  String
  startTime   DateTime
  endTime     DateTime
  language    String
  format      String
  rating      String
  lastUpdated DateTime
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
